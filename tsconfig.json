{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "es7",
      "es5",
      "es2015"
    ],
    "outDir": "es",
    "noImplicitAny": true,
    "sourceMap": false,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "./src/**/*",
    "./parser/**/*", "types",
  ],
}
